<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="3.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="10.0">
            <children>
                <HBox alignment="CENTER" styleClass="header-box">
                    <Label fx:id="lbTitle" alignment="CENTER" contentDisplay="CENTER" styleClass="titulo" text="%label.data.tools" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label fx:id="lbDate" styleClass="filter-content-sub-label" text="%label.period" />
                        <DatePicker fx:id="dpFromDate" maxWidth="200" styleClass="campo-date-picker" />
                        <DatePicker fx:id="dpToDate" maxWidth="200" styleClass="campo-date-picker" />

                        <TextField fx:id="txtSearch" promptText="caption.search" styleClass="pesquisar" />

                        <Button fx:id="btnRefresh" mnemonicParsing="false">
                            <styleClass>
                                <String fx:value="menus-tela" />
                                <String fx:value="menu-refresh" />
                            </styleClass>
                        </Button>
                        <Button fx:id="btnClear" mnemonicParsing="false">
                            <styleClass>
                                <String fx:value="menus-tela" />
                                <String fx:value="menu-clear" />
                            </styleClass>
                        </Button>
                        <Separator opacity="0.0" HBox.hgrow="ALWAYS" />

                        <Button fx:id="btnAdd" contentDisplay="TOP" mnemonicParsing="false" styleClass="campo-bt" text="%label.add">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-salvar" />
                                <String fx:value="menu-green" />
                            </styleClass>
                        </Button>
                        <Button fx:id="btnEdit" contentDisplay="TOP" mnemonicParsing="false" styleClass="campo-bt" text="%label.edit">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-excluir" />
                                <String fx:value="menu-laranja" />
                            </styleClass>
                        </Button>
                        <Button fx:id="btnDelete" mnemonicParsing="false" styleClass="campo-bt" text="%label.delete">
                            <styleClass>
                                <String fx:value="menus-acoes" />
                                <String fx:value="acao-remover" />
                                <String fx:value="menu-red" />
                            </styleClass>
                            <tooltip>
                                <Tooltip text="Hello this is tooltip" />
                            </tooltip>
                        </Button>
                    </children>
                </HBox>

                <TableView fx:id="tbTool" styleClass="table-view-voucher" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="%label.id">
                            <cellValueFactory>
                                <PropertyValueFactory property="id" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colName" text="%label.name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colImageId" text="%label.id.image">
                            <cellValueFactory>
                                <PropertyValueFactory property="imageId" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colModel" text="%label.model">
                            <cellValueFactory>
                                <PropertyValueFactory property="model" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colInfo" text="%label.info.campo">
                            <cellValueFactory>
                                <PropertyValueFactory property="info" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colImageFile" text="%label.image">
                            <cellValueFactory>
                                <PropertyValueFactory property="imageFileId" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <!--<columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>-->
                </TableView>

            </children>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@../css/default.css" />
        <URL value="@../css/custom.css" />
    </stylesheets>
</fx:root>
