<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import com.jfoenix.controls.JFXColorPicker?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../css/default.css"/>
        <URL value="@../css/custom.css"/>
    </stylesheets>
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <HBox styleClass="header-box">
            <Label fx:id="lblHeader" styleClass="titulo" text="%label.oscilloscope.version"/>
        </HBox>
        <VBox spacing="5" styleClass="invoice-box" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
                <Button alignment="TOP_LEFT" graphicTextGap="0.0" mnemonicParsing="false"
                        textOverrun="CENTER_WORD_ELLIPSIS" fx:id="btnDrawLineChart">
                    <graphic>
                        <HBox alignment="CENTER_LEFT">
                            <BorderPane fx:id="lineChartIconPane" prefHeight="35.0"
                                        prefWidth="36.0"/>
                            <VBox alignment="CENTER_LEFT">
                                <Label maxWidth="1.7976931348623157E308"
                                       text="%label.draw.graph">
                                    <font>
                                        <Font size="12.0"/>
                                    </font>
                                </Label>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL"/>
                <Button alignment="TOP_LEFT" graphicTextGap="0.0" mnemonicParsing="false"
                        textOverrun="CENTER_WORD_ELLIPSIS" fx:id="btnAbsoluteError">
                    <graphic>
                        <HBox alignment="CENTER_LEFT">
                            <BorderPane fx:id="absoluteErrorPane" prefHeight="35.0"
                                        prefWidth="36.0"/>
                            <VBox alignment="CENTER_LEFT">
                                <Label maxWidth="1.7976931348623157E308"
                                       text="%label.absolute.error">
                                    <font>
                                        <Font size="12.0"/>
                                    </font>
                                </Label>
                            </VBox>
                        </HBox>
                    </graphic>
                </Button>
            </HBox>

            <GridPane hgap="5" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints percentWidth="80.0"/>
                    <ColumnConstraints percentWidth="20.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS" percentHeight="30.0"/>
                    <RowConstraints vgrow="ALWAYS" percentHeight="70.0"/>
                </rowConstraints>

                <!-- График -->
                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2">
                    <HBox VBox.vgrow="ALWAYS" alignment="CENTER">
                        <JFXButton alignment="TOP_LEFT" graphicTextGap="0.0" mnemonicParsing="false"
                                   textOverrun="CENTER_WORD_ELLIPSIS" fx:id="btnPrevChart">
                            <graphic>
                                <HBox alignment="CENTER_LEFT">
                                    <BorderPane fx:id="prevLineChartPane" prefHeight="25.0" prefWidth="25.0"/>
                                </HBox>
                            </graphic>
                        </JFXButton>
                        <LineChart fx:id="lchGraphs" maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                            <xAxis>
                                <NumberAxis side="BOTTOM" upperBound="1000" tickUnit="50" fx:id="xAxis"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis side="LEFT" lowerBound="-3" upperBound="3" fx:id="yAxis"/>
                            </yAxis>
                        </LineChart>
                        <JFXButton alignment="TOP_LEFT" graphicTextGap="0.0" mnemonicParsing="false"
                                   textOverrun="CENTER_WORD_ELLIPSIS" fx:id="btnNextChart">
                            <graphic>
                                <HBox alignment="CENTER_LEFT">
                                    <BorderPane fx:id="nextLineChartPane" prefHeight="25.0" prefWidth="25.0"/>
                                </HBox>
                            </graphic>
                        </JFXButton>
                    </HBox>
                    <HBox alignment="CENTER" spacing="20" styleClass="total-box">
                        <VBox>
                            <Label alignment="CENTER_RIGHT" minHeight="50" minWidth="100"
                                   styleClass="simple-info-label" text="%label.graph1"/>
                            <HBox alignment="CENTER">
                                <JFXCheckBox fx:id="chbGraph1"/>
                                <JFXColorPicker minWidth="200" styleClass="sales-box-text-area"
                                                HBox.hgrow="ALWAYS" fx:id="cpGraph1"/>
                            </HBox>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox>
                            <Label alignment="CENTER_RIGHT" minHeight="50" minWidth="100"
                                   styleClass="simple-info-label" text="%label.graph2"/>
                            <HBox alignment="CENTER">
                                <JFXCheckBox fx:id="chbGraph2"/>
                                <JFXColorPicker minWidth="200" styleClass="sales-box-text-area"
                                                HBox.hgrow="ALWAYS" fx:id="cpGraph2"/>
                            </HBox>
                        </VBox>
                        <Separator orientation="VERTICAL"/>
                        <VBox>
                            <Label alignment="CENTER_RIGHT" minHeight="50" minWidth="100"
                                   styleClass="simple-info-label" text="%label.graph3"/>
                            <HBox alignment="CENTER">
                                <JFXCheckBox fx:id="chbGraph3"/>
                                <JFXColorPicker minWidth="200" styleClass="sales-box-text-area"
                                                HBox.hgrow="ALWAYS" fx:id="cpGraph3"/>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
                <!-- График -->

                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <HBox alignment="CENTER" spacing="20" styleClass="total-box">
                        <VBox alignment="CENTER" spacing="20">
                            <ImageView fx:id="imgDropBox" fitHeight="300" fitWidth="300" preserveRatio="true">
                                <Image url="@../img/dropbox.png"/>
                            </ImageView>
                            <Button fx:id="btnBrowseFile" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" style="-fx-border-radius: 10; -fx-background-radius: 10;" text="Browse!">
                                <font>
                                    <Font name="Berlin Sans FB" size="15.0" />
                                </font>
                            </Button>
                        </VBox>
                    </HBox>
                </VBox>

                <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <TableView fx:id="tbDataFiles"  styleClass="centered-table-view" AnchorPane.bottomAnchor="100" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                        <columns>
                            <TableColumn fx:id="colFileName" text="%label.file.name"/>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </AnchorPane>

            </GridPane>
        </VBox>
    </VBox>
</fx:root>
