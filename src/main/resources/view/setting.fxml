<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="10" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <HBox alignment="CENTER" styleClass="header-box">
                <Label style="-fx-padding: 0 0 0 10" styleClass="titulo" text="%label.setting" />
            </HBox>
            <GridPane hgap="10" VBox.vgrow="ALWAYS">
                <columnConstraints>
                    <ColumnConstraints prefWidth="300.0" />
                    <ColumnConstraints />
                    <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints />
                    <ColumnConstraints minWidth="10.0" />
                    <ColumnConstraints minWidth="10.0" />
                    <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" />
                    <RowConstraints />
                    <RowConstraints vgrow="ALWAYS" />
                    <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" />
                    <RowConstraints maxHeight="0.0" minHeight="0.0" prefHeight="0.0" vgrow="ALWAYS" />
                    <RowConstraints />
                </rowConstraints>
                <children>
                    <Label text="label.app.name" GridPane.columnIndex="0" HBox.hgrow="ALWAYS" />
                    <VBox GridPane.columnIndex="1">
                  <TextField />
                    </VBox>
                    <VBox GridPane.columnIndex="5" GridPane.rowIndex="2" />

                    <Label text="label.app.version" GridPane.columnIndex="0" GridPane.rowIndex="2" HBox.hgrow="ALWAYS" />
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                  <TextField />
                    </VBox>
                    <Label text="label.tech.support" GridPane.columnIndex="0" GridPane.rowIndex="4" HBox.hgrow="ALWAYS" />
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="4">
                  <TextField />
                    </VBox>
                    <Label text="label.author.name" GridPane.columnIndex="0" GridPane.rowIndex="6" HBox.hgrow="ALWAYS" />
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="6">
                  <TextField />
                    </VBox>
                    <Label text="label.author.contact" GridPane.columnIndex="0" GridPane.rowIndex="8" HBox.hgrow="ALWAYS" />
                    <VBox GridPane.columnIndex="1" GridPane.rowIndex="8">
                  <TextField />
                    </VBox>
                    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="12" />
                    <Label text="label.language" GridPane.columnIndex="4" />
                    <ComboBox fx:id="cbDefaultCardAccount" editable="true" styleClass="campo-combos-wider" GridPane.columnIndex="5" />
                    <HBox alignment="TOP_CENTER" GridPane.columnIndex="5" GridPane.rowIndex="11" GridPane.vgrow="ALWAYS">
                        <children>
                            <Button fx:id="btnSave" contentDisplay="TOP" mnemonicParsing="false" styleClass="campo-bt" text="button.save">
                                <styleClass>
                                    <String fx:value="menus-acoes" />
                                    <String fx:value="acao-salvar" />
                                    <String fx:value="menu-green" />
                                </styleClass>
                            </Button>
                        </children>
                    </HBox>
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnIndex="4" GridPane.columnSpan="2" GridPane.rowIndex="1" />
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnSpan="2" GridPane.rowIndex="3" />
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnSpan="2" GridPane.rowIndex="5" />
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnSpan="2" GridPane.rowIndex="7" />
                    <HBox style="-fx-border-color: #c5d7ec;-fx-border-width: 0px 0px 2px 0px; -fx-max-height: 2px" GridPane.columnSpan="2" GridPane.rowIndex="9" />
                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </opaqueInsets>
            </GridPane>
        </VBox>
    </children>
    <stylesheets>
        <URL value="@../css/default.css" />
        <URL value="@../css/custom.css" />
    </stylesheets>

</fx:root>
